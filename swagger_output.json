{
  "swagger": "2.0",
  "info": {
    "title": "User API",
    "description": "API documentation for managing users",
    "version": "1.0.0"
  },
  "host": "scoreboardapi-kqb1.onrender.com",
  "basePath": "/api/users",
  "schemes": ["https"],
  "consumes": ["application/json"],
  "produces": ["application/json"],
  "paths": {
    "/": {
      "post": {
        "description": "Create a new user",
        "responses": {
          "200": {
            "description": "OK"
          },
          "400": {
            "description": "Bad Request"
          },
          "500": {
            "description": "Internal Server Error"
          }
        },
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "UID": {
                  "type": "string"
                },
                "name": {
                  "type": "string"
                },
                "score": {
                  "type": "integer"
                },
                "country": {
                  "type": "string"
                }
              },
              "required": ["UID", "name", "score", "country"]
            }
          }
        ]
      },
      "get": {
        "description": "Get all users",
        "responses": {
          "200": {
            "description": "OK"
          },
          "404": {
            "description": "Not Found"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/{uid}": {
      "put": {
        "description": "Update user details by UID",
        "responses": {
          "200": {
            "description": "OK"
          },
          "404": {
            "description": "Not Found"
          },
          "500": {
            "description": "Internal Server Error"
          }
        },
        "parameters": [
          {
            "name": "uid",
            "in": "path",
            "required": true,
            "type": "string"
          },
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "name": {
                  "type": "string"
                },
                "score": {
                  "type": "integer"
                },
                "country": {
                  "type": "string"
                }
              },
              "required": ["name", "score", "country"]
            }
          }
        ]
      },
      "get": {
        "description": "Get user by UID",
        "parameters": [
          {
            "name": "uid",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "404": {
            "description": "Not Found"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/currentWeekLeaderboard": {
      "get": {
        "description": "Get current week leaderboard",
        "responses": {
          "200": {
            "description": "OK"
          },
          "404": {
            "description": "Not Found"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/lastWeekLeaderboard/{country}": {
      "get": {
        "description": "Get last week leaderboard by country",
        "parameters": [
          {
            "name": "country",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "404": {
            "description": "Not Found"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    }
  }
}
